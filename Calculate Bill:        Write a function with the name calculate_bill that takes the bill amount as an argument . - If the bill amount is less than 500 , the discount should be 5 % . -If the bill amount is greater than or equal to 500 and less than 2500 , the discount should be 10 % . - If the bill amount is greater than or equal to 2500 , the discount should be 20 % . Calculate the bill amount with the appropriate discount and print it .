def calculate_bill(amount):
    # 5% discount
    if amount < 500 :
        discount = (amount*5) / 100
        total = amount - discount
        print(total)
    # 10% discount
    if 500 <= amount < 2500 :
        discount = (amount*10) / 100
        total = amount - discount
        print(total)
    # 20% discount
    if amount > 2500 :
        discount = (amount*20) / 100
        total = amount - discount
        print(total)

amount = int(input())
# Call the calculate_bill function
calculate_bill(amount)
