a = int(input())

left_side = ""
right_side = ""
space = a-1
for i in range(1,a+1) :
    if i == 1 :
        print(space*" " + "1")
        space = space -1
    else :
        left_side=  str(i) + left_side 
        right_side = right_side + str(i)
        print(space*" " + left_side + "1" + right_side)
        space -= 1
